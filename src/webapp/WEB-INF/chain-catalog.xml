<catalog>
  <!-- import webdav collection -->
  <chain name="import-collection">
    <command id="add-collection"
             className="org.apache.jackrabbit.server.io.AddNodeCommand"
             nodeType="dav:collection"/>
    <command id="set-displayname"
             className="org.osaf.cosmo.jackrabbit.io.SetDisplayNameCommand"/>
    <command id="make-ticketable"
             className="org.apache.jackrabbit.server.io.AddMixinCommand"
             nodeType="mix:ticketable"/>
  </chain>

  <!-- import webdav resource -->
  <chain name="import-resource">
    <command id="set-contenttype"
             className="org.apache.jackrabbit.server.io.SetContentTypeCommand"/>
    <command id="import-file"
             className="org.osaf.cosmo.jackrabbit.io.DavResourceImportCommand"/>
    <command id="set-displayname"
             className="org.osaf.cosmo.jackrabbit.io.SetDisplayNameCommand"/>
    <command id="make-ticketable"
             className="org.apache.jackrabbit.server.io.AddMixinCommand"
             nodeType="mix:ticketable"/>
  </chain>

  <!-- export webdav collection -->
  <chain name="export-collection">
    <command id="export-dirlisting"
             className="org.apache.jackrabbit.server.io.DirListingExportCommand"
             nonCollectionNodeTypes="nt:resource, nt:file, dav:resource, caldav:resource"
             collectionNodeTypes="nt:folder, dav:collection, caldav:collection"
             ignoredNodeTypes="rep:system, ticket:ticket, icalendar:calendar"/>
  </chain>

  <!-- export webdav resource -->
  <chain name="export-resource">
    <command id="export-file"
             className="org.apache.jackrabbit.server.io.FileExportCommand"/>
  </chain>
</catalog>
