                       <executions>
                         <execution>
                           <id>unpack-inplace</id>
                           <phase>compile</phase>
                           <goals>
                             <goal>unpack</goal>
                           </goals>
                           <configuration>
                               <artifactItems>
                                 <artifactItem>
                                    <groupId>org.osaf.cosmo</groupId>
                                    <artifactId>dojo</artifactId>
                                    <version>0.4.3-0D0-SNAPSHOT</version>
                                    <type>jar</type>
                                  </artifactItem>
                                  <artifactItem>
                                     <groupId>org.osaf.cosmo</groupId>
                                     <artifactId>olson-tzdata</artifactId>
                                     <version>2007h</version>
                                     <type>jar</type>
                                   </artifactItem>
                                </artifactItems>
                              <outputDirectory>${basedir}/src/main/webapp/js/lib</outputDirectory>
                           </configuration>
                         </execution>
                       </executions>
                     </plugin>
                     <plugin>
                         <artifactId>maven-clover-plugin</artifactId>
                         <groupId>org.apache.maven.plugins</groupId>
                         <configuration>
                             <jdk>1.5</jdk>
                             <excludes>
                                 <exclude>**/*Test/java</exclude>
                             </excludes>
                             <targetPercentage>45%</targetPercentage>
                         </configuration>
                         <executions>
                             <execution>
                                 <phase>verify</phase>
                                 <goals>
                                     <goal>instrument</goal>
                                     <goal>check</goal>
                                 </goals>
                             </execution>
                             <execution>
                                 <id>site</id>
                                 <phase>pre-site</phase>
                                 <goals>
                                     <goal>instrument</goal>
                                     <goal>aggregate</goal>
                                 </goals>
                             </execution>
                         </executions>
                     </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
