<urlrewrite>
  <!-- error rules -->
  <rule>
    <from>^/error$</from>
    <to>/error.do</to>
  </rule>

  <!-- session/welcome rules -->
  <rule>
    <from>^/login$</from>
    <to>/login.do</to>
  </rule>
  <rule>
    <from>^/loginfailed$</from>
    <to>/login.do?login_failed=1</to>
  </rule>
  <rule>
    <from>^/welcome$</from>
    <to>/welcome.do</to>
  </rule>
  <rule>
    <from>^/logout$</from>
    <to>/logout.do</to>
  </rule>

  <!-- user rules -->
  <rule>
    <from>^/users$</from>
    <to>/users.do</to>
  </rule>
  <rule>
    <from>^/user/([a-z]+)$</from>
    <to>/user.do?username=$1</to>
  </rule>

  <!-- homedir rules -->
  <rule>
    <from>^/home$</from>
    <to>/home/</to>
  </rule>
</urlrewrite>
