  </definition>

  <definition name="error.notfound" extends="layout.standard">
    <put name="body"         value="/WEB-INF/jsp/error/notfound.jsp"/>
    <put name="prefix"       value="Error.NotFound."/>
    <put name="showNav"      value="false"/>
  </definition>

  <!-- login defs -->

  <definition name="login" extends="layout.standard">
    <put name="body"         value="/WEB-INF/jsp/login.jsp"/>
    <put name="prefix"       value="Login."/>
    <put name="showNav"      value="false"/>
  </definition>

