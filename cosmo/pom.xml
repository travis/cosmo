                           </configuration>
                         </execution>
                       </executions>
                     </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>war-inplace</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
