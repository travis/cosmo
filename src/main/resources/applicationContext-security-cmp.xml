<!-- Security configuration for CMP -->

<beans>

  <!-- interceptor which performs authorization for CMP requests -->

   <bean id="cmpFilterInvocationInterceptor"
         class="org.acegisecurity.intercept.web.FilterSecurityInterceptor">
     <property name="authenticationManager">
       <ref bean="authenticationManager"/>
     </property>
     <property name="accessDecisionManager">
       <ref bean="accessDecisionManager"/>
     </property>
     <property name="objectDefinitionSource">
       <value>
     CONVERT_URL_TO_LOWERCASE_BEFORE_COMPARISON
     PATTERN_TYPE_APACHE_ANT
         /cmp/users=ROLE_ROOT
         /cmp/user/*=ROLE_ROOT
         /cmp/signup=ROLE_ANONYMOUS
         /cmp/activate/*=ROLE_ANONYMOUS, ROLE_ROOT, ROLE_USER
         /cmp/account=ROLE_USER
         /**=ROLE_ROOT
       </value>
     </property>
   </bean>

  <!-- filter chain that kicks off request-time processing -->

  <bean id="cmpFilterChainProxy"
        class="org.acegisecurity.util.FilterChainProxy">
    <property name="filterInvocationDefinitionSource">
      <value>
        CONVERT_URL_TO_LOWERCASE_BEFORE_COMPARISON
        PATTERN_TYPE_APACHE_ANT
        /**=cmpHttpRequestContextIntegrationFilter,cmpBasicProcessingFilter,cmpAnonymousProcessingFilter,cmpExceptionTranslationFilter,cmpFilterInvocationInterceptor
      </value>
    </property>
  </bean>

  <!-- filter that integrates SecurityContext into HTTP request -->

  <bean id="cmpHttpRequestContextIntegrationFilter"
        class="org.osaf.cosmo.acegisecurity.context.HttpRequestContextIntegrationFilter"/>

  <!-- filter that performs Basic authentication -->

  <bean id="cmpBasicAuthenticationEntryPoint"
        class="org.acegisecurity.ui.basicauth.BasicProcessingFilterEntryPoint">
    <property name="realmName">
      <value>Cosmo Sharing Server</value>
    </property>
  </bean>

  <bean id="cmpBasicProcessingFilter"
        class="org.acegisecurity.ui.basicauth.BasicProcessingFilter">
    <property name="authenticationManager">
      <ref bean="authenticationManager"/>
    </property>
    <property name="authenticationEntryPoint">
      <ref local="cmpBasicAuthenticationEntryPoint"/>
    </property>
  </bean>

  <!-- filter that performs anonymous authentication -->

  <bean id="cmpAnonymousProcessingFilter"
        class="org.acegisecurity.providers.anonymous.AnonymousProcessingFilter">
    <property name="key">
      <value>badgerbadgerbadger</value>
    </property>
    <property name="userAttribute">
      <value>anonymous,ROLE_ANONYMOUS</value>
    </property>
  </bean>

  <!-- filter that converts authn/authz exceptions to CMP responses -->

  <bean id="cmpExceptionTranslationFilter"
        class="org.acegisecurity.ui.ExceptionTranslationFilter">
    <property name="authenticationEntryPoint">
      <ref local="cmpBasicAuthenticationEntryPoint"/>
    </property>
    <property name="createSessionAllowed">
      <value>false</value>
    </property>
  </bean>

</beans>
