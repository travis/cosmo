<!-- Security configuration for WebDAV and Atom -->

<beans>

  <!-- interceptor which performs authorization for DAV requests -->

   <bean id="jsonFilterInvocationInterceptor"
         class="org.acegisecurity.intercept.web.FilterSecurityInterceptor">
     <property name="authenticationManager">
       <ref bean="authenticationManager"/>
     </property>
     <property name="accessDecisionManager">
       <ref bean="accessDecisionManager"/>
     </property>
     <property name="objectDefinitionSource">
       <value>
	 CONVERT_URL_TO_LOWERCASE_BEFORE_COMPARISON
	 PATTERN_TYPE_APACHE_ANT
         /json-rpc/**=ROLE_ROOT,ROLE_USER,ROLE_ANONYMOUS
         /**=ROLE_ROOT
       </value>
     </property>
   </bean>

  <!-- filter chain that kicks off request-time processing -->

  <bean id="jsonFilterChainProxy"
        class="org.acegisecurity.util.FilterChainProxy">
    <property name="filterInvocationDefinitionSource">
      <value>
        CONVERT_URL_TO_LOWERCASE_BEFORE_COMPARISON
        PATTERN_TYPE_APACHE_ANT
        /**=jsonHttpSessionContextIntegrationFilter,jsonBasicProcessingFilter,defaultAnonymousProcessingFilter,jsonExceptionTranslationFilter,jsonFilterInvocationInterceptor
      </value>
    </property>
  </bean>
  
  <!-- filter that integrates SecurityContext into HTTP Session -->

  <bean id="jsonHttpSessionContextIntegrationFilter"
        class="org.acegisecurity.context.HttpSessionContextIntegrationFilter"/>

  <!-- filter that performs Basic authentication -->

  <bean id="jsonBasicAuthenticationEntryPoint"
        class="org.acegisecurity.ui.basicauth.BasicProcessingFilterEntryPoint">
    <property name="realmName">
      <value>Cosmo Sharing Server</value>
    </property>
  </bean>

  <bean id="jsonBasicProcessingFilter"
        class="org.acegisecurity.ui.basicauth.BasicProcessingFilter">
    <property name="authenticationManager">
      <ref bean="authenticationManager"/>
    </property>
    <property name="authenticationEntryPoint">
      <ref local="jsonBasicAuthenticationEntryPoint"/>
    </property>
    <property name="ignoreFailure">
      <value>true</value>
    </property>
  </bean>

  <!-- filter that converts authn/authz exceptions to DAV responses -->

  <bean id="jsonExceptionTranslationFilter"
        class="org.acegisecurity.ui.ExceptionTranslationFilter">
    <property name="authenticationEntryPoint">
      <ref local="jsonBasicAuthenticationEntryPoint"/>
    </property>
    <property name="createSessionAllowed">
      <value>false</value>
    </property>
  </bean>

</beans>
